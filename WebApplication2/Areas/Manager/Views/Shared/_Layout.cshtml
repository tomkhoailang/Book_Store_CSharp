                            </li>
                            <li>
                                @Html.ActionLink("Chương trình khuyến mãi", "Index", "Promotions")
                            </li>
                            <li>
                                @Html.ActionLink("Danh mục", "Index", "CATEGORIES")
                            </li>

                        </ul>
                    </li>

                    <li class="mega-menu mega-menu-sm">
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-globe-alt menu-icon"></i><span class="nav-text">Quản lý tài khoản</span>
                        </a>
                        <ul aria-expanded="false">
                            <li>
                                @Html.ActionLink("Tài khoản", "Index", "User")
                            </li>
                            <li>
                                @Html.ActionLink("Hạng người dùng", "Index", "Tiers")
                            </li>
                        </ul>
                    </li>
                    <li class="mega-menu mega-menu-sm">
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-globe-alt menu-icon"></i><span class="nav-text">Quản lý nguồn nhập</span>
                        </a>
                        <ul aria-expanded="false">
                            <li>
                                @Html.ActionLink("Nhà xuất bản", "Index", "Publishers")
                            </li>
                            <li>
                                @Html.ActionLink("Phiếu nhập", "Index", "Stock_received_note")
                            </li>
                            <li>
                                @Html.ActionLink("Kho hàng", "Index", "STOCK_INVENTORY")
                            </li>
                        </ul>
                    </li>
                    <li class="mega-menu mega-menu-sm">
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-globe-alt menu-icon"></i><span class="nav-text">Thống kê</span>
                        </a>
                        <ul aria-expanded="false">
                            <li>
                                @Html.ActionLink("Thông kê doanh thu", "Index", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Thống kê số lượng bán ra trong tháng", "GetBuyCountOfCurrentMonth", "Home")
                            </li>
                        </ul>
