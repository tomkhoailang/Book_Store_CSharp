@model IEnumerable<WebApplication2.Models.TIER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}


@{
    var currentModel = new WebApplication2.Models.TIER();
}

<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard","Home")">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Tiers")">Hạng người dùng</a></li>
            </ol>
        </div>
    </div>
 
    <div class="d-flex justify-content-end mr-4">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            Thêm hạng mới
        </button>
    </div>
    <hr />

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Hạng người dùng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="CreatePartialViewContainer">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Hạng người dùng</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="edit-modal-body modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách hạng</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TierName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TierDiscount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TierLevel)
                                        </th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TierName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TierDiscount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TierLevel)
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-primary" id="@item.TierID" data-toggle="modal" data-target="#editModal" value="@item.TierID" onclick="loadPartialView(this.value)">
                                                    Chỉnh sửa
                                                </button>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
<script src="~/Assets/Admin/js/jquery.js"></script>
<script>
    function loadCreatePartialView() {
        $.ajax({
            url: '/Manager/TIERs/Create',
            type: 'GET',
            success: function (data) {
                $('#CreatePartialViewContainer').html(data);
            },
            error: function () {
                $('#CreatePartialViewContainer').html("<p>Error loading partial view.</p>")
            }
        });
    }
    loadCreatePartialView();
</script>

<script>
    function loadPartialView(id) {
        $.ajax({
            url: '/Manager/TIERs/Edit',
            data: { id: id },
            type: 'GET',
            success: function (data) {
                $('.edit-modal-body').html(data);
            }
        });
    }
</script>



